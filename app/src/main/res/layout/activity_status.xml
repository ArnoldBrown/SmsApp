<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.register.StartActivity">

    <LinearLayout
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_100sdp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/id_logo"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_margin="@dimen/_20sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Submit your Health Declaration Form for COVID-19 by clicking Start button below"/>

        </LinearLayout>

        <Button
            android:id="@+id/id_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Start"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/button_blue_fill_style"
            android:padding="@dimen/_5sdp"/>
    </RelativeLayout>

</RelativeLayout>