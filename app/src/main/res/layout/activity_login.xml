<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center">

        <ImageView
            android:id="@+id/id_logo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/id_mobile_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:background="@drawable/edittext_outline_style_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@null"
                    android:text="MY(+60)"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.7"
                android:background="@drawable/edittext_outline_style_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Mobile number"
                    android:textColor="@color/colorGray"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_email_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:background="@drawable/edittext_outline_style_grey">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Email address"
                android:textColor="@color/colorGray"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edittext_outline_style_grey">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Password"
                android:textColor="@color/colorGray"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/id_log_with"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorPrimary"
            android:text="Login with email"
            android:gravity="right"/>

        <TextView
            android:id="@+id/id_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="Sign In"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/button_blue_fill_style"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/id_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="Register Here"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edittext_outline_style_primary"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/id_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorPrimary"
            android:text="Forgot Password?"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>