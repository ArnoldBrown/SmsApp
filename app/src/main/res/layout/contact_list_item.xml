<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="60dp" android:padding="10dp">
    <QuickContactBadge android:id="@+id/badge" android:layout_width="50dp" android:layout_height="50dp" android:src="@mipmap/contact_icon" android:scaleType="centerCrop" />
    <TextView android:ellipsize="marquee"
        android:id="@+id/name"
        android:paddingLeft="@dimen/listview_item_padding"
        android:paddingRight="@dimen/listview_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_match_other"
        android:singleLine="true"
        android:visibility="gone"
        android:layout_toRightOf="@+id/badge"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <TextView android:ellipsize="marquee"
        android:id="@+id/number"
        android:paddingLeft="@dimen/listview_item_padding"
        android:paddingRight="@dimen/listview_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00000"
        android:singleLine="true"
        android:layout_toRightOf="@id/badge"
        android:layout_below="@+id/name"
        android:layout_alignWithParentIfMissing="true" />
</RelativeLayout>
