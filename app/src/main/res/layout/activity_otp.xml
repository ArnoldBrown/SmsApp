<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.register.StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top">
            <ImageView
                android:id="@+id/id_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/leftbackarrow"
                android:tint="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/id_logo"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/colorBlack"
                    android:text="OTP Verification"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorGray"
                    android:text="Enter the OTP sent to your registred phone number/email address xyz@yourmail.com"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorBlack"
                    android:text="OTP"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/otpET1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/edittext_outline_style_grey"
                        android:textSize="@dimen/_20sdp"/>

                    <EditText
                        android:id="@+id/otpET2"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/edittext_outline_style_grey"
                        android:textSize="@dimen/_20sdp"/>
                    <EditText
                        android:id="@+id/otpET3"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/edittext_outline_style_grey"
                        android:textSize="@dimen/_20sdp"/>

                    <EditText
                        android:id="@+id/otpET4"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/edittext_outline_style_grey"
                        android:textSize="@dimen/_20sdp"/>
                    <EditText
                        android:id="@+id/otpET5"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/edittext_outline_style_grey"
                        android:textSize="@dimen/_20sdp"/>
                    <EditText
                        android:id="@+id/otpET6"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/edittext_outline_style_grey"
                        android:textSize="@dimen/_20sdp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_email_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:background="@drawable/edittext_outline_style_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Email address"
                    android:textColor="@color/colorGray"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIdn't receive yet?"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend OTP"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4m 55s"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="right"
                    android:textColor="@color/colorGreen"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorGray"
                android:text="An OTP will be sent to your registered phone number/email, kindly enter above to register. If you do not receive it within 5minutes, Kindly try again."/>

            <TextView
                android:id="@+id/id_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="Submit"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/button_blue_fill_style"
                android:padding="@dimen/_10sdp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>